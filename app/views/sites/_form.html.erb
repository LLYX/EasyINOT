<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :site_code %><br>
    <%= f.text_field :site_code, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :english_name %><br>
    <%= f.text_field :english_name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :french_name %><br>
    <%= f.text_field :french_name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :designated %><br>
    <%= f.check_box :designated %>
  </div>
  <div class="form-group">
    <%= f.label :department_ids %><br>
    <%= f.collection_select(:department_ids, Department.all, :id, :english_name, {:include_hidden => false,  :include_blank => true}, {:multiple => true, :size => 10, :class => "form-control"}) %>
  </div>
  <div class="form-group">
    <%= f.label :group_ids %><br>
    <%= f.collection_select(:group_ids, Group.all, :id, :english_name, {:include_hidden => false,  :include_blank => true}, {:multiple => true, :size => 10, :class => "form-control"}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
