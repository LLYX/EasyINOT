<%= form_for(@incident) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :from %><br>
    <%= select_tag(:from, options_from_collection_for_select(MailingList.all.order(:name), :emails, :name,  :selected => 'SSC-SPC_ECC-CCE@ssc-spc.gc.ca; '), {:include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :from, {:value => 'SSC-SPC_ECC-CCE@ssc-spc.gc.ca; ', :class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :to %><br>
    <%= select_tag(:to, options_from_collection_for_select(MailingList.all.order(:name), :emails, :name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :to, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :update_number %><br>
    <%= f.text_field :update_number, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :priority %><br>
    <%= f.select(:priority, ["High", "Critical"], {:include_blank => true}, {:class => "form-control"}) %>
  </div>
  <div class="form-group">
    <%= f.label :affected_departments %><br>
    <%= select_tag(:affected_departments, options_from_collection_for_select(Department.all.order(:english_name), :english_name, :english_name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :affected_departments, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :service_impact %><br>
    <%= select_tag(:service_impact, options_from_collection_for_select(Application.all.order(:english_name), :english_name, :english_name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <%= select_tag(:service_impact, options_from_collection_for_select(Site.all, :english_name, :english_name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :service_impact, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :responsible_service_support_resource_group %><br>
    <%= select_tag(:responsible_service_support_resource_group, options_from_collection_for_select(Group.all.order(:english_name), :english_name, :english_name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :responsible_service_support_resource_group, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :resolved %><br>
    <%= f.check_box :resolved %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= select_tag(:status, options_from_collection_for_select(Phrase.where(version: 'status').order(:english_phrase), :english_phrase, :english_phrase), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :status, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :resolution %><br>
    <%= select_tag(:resolution, options_from_collection_for_select(Phrase.where(version: 'resolution').order(:english_phrase), :english_phrase, :english_phrase), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :resolution, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="form-group">
    <%= f.label :incident_number %><br>
    <%= f.text_field :incident_number, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :actual_start_date_and_time %><br>
    <%= f.datetime_select :actual_start_date_and_time, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :recorded_start_date_and_time %><br>
    <%= f.datetime_select :recorded_start_date_and_time, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :resolved_date_and_time %><br>
    <%= f.datetime_select :resolved_date_and_time, {:include_blank => true, :class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :incident_responsibility %><br>
    <%= select_tag(:incident_responsibility, options_from_collection_for_select(Department.all.order(:english_name), :english_name, :english_name), {:multiple => true, :size => 10, :include_blank => true, :class => "form-control"}) %>
    <br>
    <%= f.text_area :incident_responsibility, {:class => "form-control", :rows => "3"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
